/* pages/canteen/canteen.wxss */

.date-picker-bar {
  width: 100%;
  background: #ffffff;
  text-align: center;
  font-size: 20px;
  color: rgba(0,0,0,0.7);
  padding-top: 5px;
  padding-bottom: 5px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.addcomment {
  background-color: #ffffff;
  border: 2px;
  border-radius: 4px;
  margin: 4px 8px 0 8px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.addcomment input {
  width: 100%;
  margin: 4px 4px 4px 4px;
}

.addcomment image {
  width: 25px;
  height: 20px;
}

.send-comment-button {
  width: 80px;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f6f6f6;
  padding: 5px 0 5px 0;
  border-bottom-right-radius: 4px;
  border-top-right-radius: 4px;
}

.disablecomment {
  background-color: #f6f6f6;
  border: 2px;
  border-radius: 4px;
  margin: 4px 8px 0 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.disablecomment input {
  width: 100%;
  margin: 4px 4px 4px 4px;
}